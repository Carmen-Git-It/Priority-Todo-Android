<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Personalization">

        <SwitchPreference
            android:defaultValue="true"
            android:key="show_name"
            android:title="Show Name on Home Page"
            app:summary="Toggle displaying your name on the home page" />
        <EditTextPreference
            android:defaultValue="Name"
            android:key="display_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Display Name"
            app:dependency="show_name"
            app:summary="Set your display name" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Tasks">
        <SwitchPreference
            android:defaultValue="true"
            android:key="use_date"
            android:title="Use Dates"
            app:summary="When disabled only considers task priority" />
        <ListPreference
            android:defaultValue="balanced"
            android:entries="@array/priority_bias_entries"
            android:entryValues="@array/priority_bias_values"
            android:key="priority_bias"
            android:title="Priority Bias"
            app:dependency="use_date"
            app:summary="Alter the prioritization system to lean more toward task priority, date, or a balanced approach (default)" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Lists">

    </PreferenceCategory>
    <PreferenceCategory android:title="Storage">

        <SwitchPreference
            android:defaultValue="false"
            android:key="offline_mode"
            android:title="Offline Mode"
            app:summary="Stops backing up your data online" />
    </PreferenceCategory>

</PreferenceScreen>